@using AdmEscolar.Business.ViewModels.Alumns
@model SaveAlumnsViewModel


@{
    ViewData["Title"] = "Save Alumns";
    var CreateMode = Model.Id == 0 ? true : false;
}

<div class="container-fluid">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>@(CreateMode ? "Creating a new Alumns" : $"Editing the Alumns: {Model.Name}")</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Alumns" asp-action="@(CreateMode ? "Create" : "Edit")">

                    <div class="mb-3">
                        <label asp-for="Matricula" class="form-label">Matricula</label>
                        <input asp-for="Matricula" class="form-control" type="number"/>
                        <span asp-validation-for="Matricula" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" type="text"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" type="text"/>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BornDate" class="form-label">Born Date</label>
                        <input asp-for="BornDate" class="form-control" type="date" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProvinceId" class="form-label">Provincia</label>
                        <select asp-for="ProvinceId" asp-items="@(new SelectList(Model.Provinces, "Id", "Description"))" class="form-select">
                            <option disabled selected>Please Select a option</option>
                        </select>
                        <span asp-validation-for="ProvinceId" class="text-danger"></span>
                    </div>

                    <input asp-for="Id" type="hidden"/>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-outline-primary float-lg-end">@(CreateMode ? "Create Alumn" : "Edit Alumn")</button>
                        <a asp-controller="Alumns" asp-action="Index" class="btn btn-outline-warning">Back</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

