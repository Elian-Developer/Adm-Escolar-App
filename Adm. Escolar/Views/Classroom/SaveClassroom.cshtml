@using AdmEscolar.Business.ViewModels.Classrooms
@model SaveClassroomViewModel

@{
    var CreateMode = Model.Id == 0 ? true : false;
    ViewData["Title"] = "SaveClassroom";
}

<div class="container-fluid">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4>@(CreateMode ? "Creating a new Clasrooms" : $"Editing Classroom: {Model.Name}")</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Classroom" asp-action="@(CreateMode ? "Create" : "Edit")">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" type="text" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Capacity" class="form-label">Capacity</label>
                        <input asp-for="Capacity" class="form-control" type="number" min="1" max="40" />
                    </div>

                    <input asp-for="Id" type="hidden" />

                    <div class="mt-3">
                        <button type="submit" class="btn btn-outline-primary float-lg-end">@(CreateMode ? "Create Classroom" : "Edit Classroom")</button>
                        <a asp-controller="Classroom" asp-action="Index" class="btn btn-outline-warning">Back</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



