@using AdmEscolar.Business.ViewModels.Classrooms
@model List<ClassroomViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">

    <div class="mb-3 mt-3">
        <a asp-controller="Classroom" asp-action="Create" class="btn btn-outline-primary">Create New</a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        @if(Model.Count == 0 || Model == null){
            <h4 class="fst-italic">There isn't any Classroom available.</h4>
        }

        @foreach (ClassroomViewModel item in Model)
        {
            <div class="col-4">
                <div class="card zoom border-dark" style="background-color:aliceblue">
                    <div class="card-header">
                        <center><h4><i> @item.Name</i></h4></center>
                    </div>
                    <div class="card-body">
                        <div>
                            <p class="mb-2 fw-bold text-center"><i> Capacity: @item.Capacity Alumns</i></p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Classroom" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Edit</a>
                        <a asp-controller="Classroom" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

