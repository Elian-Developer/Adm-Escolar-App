@using AdmEscolar.Business.ViewModels.Teachers
@model SaveTeacherViewModel


@{
    var CreateMode = Model.Id == 0 ? true : false;
    ViewData["Title"] = "SaveTeacher";
}

<div class="container-fluid">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4>@(CreateMode ? "Creating a new Teacher" : $"Editing Teacher: {Model.Name}")</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Teachers" asp-action="@(CreateMode ? "Create" : "Edit")">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" type="text" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" type="text" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BornDate" class="form-label">Born Date</label>
                        <input asp-for="BornDate" class="form-control" type="date" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="AreaId" class="form-label">Area</label>
                        <select asp-for="AreaId" asp-items="@(new SelectList(Model.Areas, "Id", "Description"))" class="form-select">
                            <option disabled selected>Please Select a option</option>
                        </select>
                        <span asp-validation-for="AreaId" class="text-danger"></span>
                    </div>

                    <input asp-for="Id" type="hidden" />

                    <div class="mt-3">
                        <button type="submit" class="btn btn-outline-primary float-lg-end">@(CreateMode ? "Create Teacher" : "Edit Teacher")</button>
                        <a asp-controller="Teachers" asp-action="Index" class="btn btn-outline-warning">Back</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

