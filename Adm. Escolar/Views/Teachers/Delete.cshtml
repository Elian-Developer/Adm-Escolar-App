@using AdmEscolar.Business.ViewModels.Teachers
@model SaveTeacherViewModel


@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">

    <form method="post" asp-controller="Teachers" asp-action="DeletePost">

        <div class="card col-8 offset-2">
            <div class="card-header bg-black text-white">
                <h4 class="text-center fst-italic">Removing the Teacher: @Model.Name @Model.LastName</h4>
            </div>
            <div class="card-body">
                <h5 class="fst-italic">Are you sure you want remove @Model.Name @Model.LastName of the Teacher List?</h5>
            </div>
            <div class="card-footer">
                <div>
                    <button type="submit" class="btn btn-outline-danger">Remove</button>
                    <a asp-controller="Teachers" asp-action="Index" class="btn btn-outline-warning">Back</a>
                </div>
            </div>
        </div>

        <input asp-for="Id" type="hidden">

    </form>
</div>

